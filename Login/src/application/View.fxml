          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <VBox alignment="CENTER" prefHeight="427.0" prefWidth="280.0" spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
